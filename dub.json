{
  "name": "teraflop",
	"description": "An ECS game engine on a wgpu foundation",
	"authors": [
		"Chance Snow"
  ],
  "license": "BSD 3-clause",
  "copyright": "Copyright Â© 2020, Chance Snow",
  "targetType": "sourceLibrary",
  "targetPath": "bin",
  "sourcePaths": [ "source" ],
  "subPackages": [
    "examples/triangle"
  ],
  "systemDependencies": "glfw >= 3.2, ",
  "dependencies": {
    "bindbc-glfw": "~>0.10.1",
    "eventcore": "~>0.9.20",
    "gfm:math": "~>8.0",
		"wgpu-d": {
      "repository": "git+https://github.com/chances/wgpu-d.git",
      "version": "~master"
    }
  },
  "subConfigurations": {
    "bindbc-glfw": "static"
  },
  "lflags-posix": [
    "-Llib/glfw-3.3.2/src"
  ],
  "lflags-osx": [
    "-framework", "AppKit",
    "-framework", "QuartzCore",
    "-framework", "Foundation"
  ],
  "libs": ["glfw3"],
  "libs-linux": [
    "X11"
  ],
  "postBuildCommands-linux": [
    "patchelf --set-rpath '$$ORIGIN' $PACKAGE_DIR/bin/teraflop-test-library"
  ],
  "copyFiles-linux": [
    "lib/glfw-3.3.2/src/libglfw3.a"
  ]
}
