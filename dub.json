{
  "name": "teraflop",
	"description": "An ECS game engine on a WebGPU foundation",
	"authors": [
		"Chance Snow"
  ],
  "license": "BSD 3-clause",
  "copyright": "Copyright Â© 2020, Chance Snow",
  "targetType": "sourceLibrary",
  "targetPath": "bin",
  "sourcePaths": [ "source" ],
  "subPackages": [
    "examples/triangle",
    "examples/cube"
  ],
  "systemDependencies": "glfw >= 3.2, ",
  "dependencies": {
    "bindbc-glfw": "~>1.0.1",
    "eventcore": "~>0.9.20",
    "gfm:math": "~>8.0",
		"wgpu-d": {
      "repository": "git+https://github.com/chances/wgpu-d.git",
      "version": "dfe9ed89edf818a025c5368130cd728f3d8801c4"
    }
  },
  "subConfigurations": {
    "bindbc-glfw": "static"
  },
  "lflags-posix": [
    "-Llib/glfw-3.3.2/src"
  ],
  "lflags-osx": [
    "-framework", "AppKit",
    "-framework", "QuartzCore",
    "-framework", "Foundation"
  ],
  "libs": ["glfw3"],
  "libs-linux": [
    "X11"
  ],
  "preBuildCommands-linux": [
    "cd $TERAFLOP_PACKAGE_DIR && make lib/glfw-3.3.2/src/libglfw3.a"
  ],
  "postBuildCommands-linux": [
    "test -f $PACKAGE_DIR/bin/teraflop-test-library && patchelf --set-rpath '$$ORIGIN' $PACKAGE_DIR/bin/teraflop-test-library || echo $PACKAGE_DIR/bin/teraflop-test-library: does not exist"
  ],
  "copyFiles-linux": [
    "lib/glfw-3.3.2/src/libglfw3.a"
  ]
}
