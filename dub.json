{
  "name": "teraflop",
	"description": "An ECS game engine on a wgpu foundation",
	"authors": [
		"Chance Snow"
  ],
  "license": "BSD 3-clause",
  "copyright": "Copyright Â© 2020, Chance Snow",
  "targetType": "sourceLibrary",
  "targetPath": "bin",
  "sourcePaths": [ "source" ],
  "subPackages": [
    "examples/triangle"
  ],
  "configurations": [
    {
      "name": "unittest"
    },
    {
      "name": "unittest-gpu",
      "versions": ["GPU"]
    }
  ],
  "systemDependencies": "glfw >= 3.2, vulkan >= 1.1.0",
  "dependencies": {
    "bindbc-glfw": "~>0.10.1",
    "concepts": "~>0.0.8",
    "erupted": "~>2.1.0",
    "gfm:math": "~>8.0",
    "libasync": "~>0.8.6"
  },
  "subConfigurations": {
    "bindbc-glfw": "static"
  },
  "lflags-linux": [
    "-Llib/glfw-3.3.2/src"
  ],
  "libs": ["glfw3"],
  "libs-linux": [
    "X11"
  ],
  "copyFiles-linux": [
    "lib/glfw-3.3.2/src/libglfw3.a"
  ]
}
