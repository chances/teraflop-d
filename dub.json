{
  "name": "teraflop",
	"description": "An ECS game engine on a Vulkan foundation",
	"authors": [
		"Chance Snow"
  ],
  "license": "BSD 3-clause",
  "copyright": "Copyright Â© 2020, Chance Snow",
  "targetType": "sourceLibrary",
  "targetPath": "bin",
  "sourcePaths": [ "source" ],
  "subPackages": [
    "examples/triangle",
    "examples/cube"
  ],
  "configurations": [
    {
      "name": "unittest"
    },
    {
      "name": "unittest-gpu",
      "versions": ["GPU"]
    }
  ],
  "systemDependencies": "glfw >= 3.2, vulkan >= 1.1.0",
  "dependencies": {
    "bindbc-glfw": "~>0.10.1",
    "concepts": "~>0.0.8",
    "gfm:math": "~>8.0",
    "gfx:genmesh": "~master",
    "gfx:graal": "~master",
    "gfx:vulkan": "~master",
    "libasync": "~>0.8.6"
  },
  "subConfigurations": {
    "bindbc-glfw": "static",
    "gfx:vulkan": "glfw"
  },
  "lflags-linux": [
    "-Llib/glfw-3.3.2/src"
  ],
  "libs": ["glfw3"],
  "libs-linux": [
    "X11"
  ],
  "preBuildCommands-linux": [
    "cd $TERAFLOP_PACKAGE_DIR && make lib/glfw-3.3.2/src/libglfw3.a"
  ]
}
